<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>My profile</title>
    <link rel="stylesheet" href="styles/style.css">
    <script src="https://unpkg.com/htmx.org@1.9.4/dist/htmx.min.js"></script>
</head>
<body>
<div class="wrapper">
    <header></header>
    <main class="profile-main">
        <section class="user-information" hx-get="/user/{id}/info">
            <div class="content">
                <h2>My profile</h2>
                <h3>Name: <span>#(fullName)</span></h3>
                <h3>Passport number: <span>#(passportNumber)</span></h3>
                <h3>Phone number: <span>#(phoneNumber)</span></h3>
                <h3>Email: <span>#(email)</span></h3>
                <h3>Gender: <span>#(gender)</span></h3>
            </div>
        </section>
        <section class="user-flights">
            <div class="content">
                <h2>My flights</h2>
                <div class="table-wrapper">
                    <table id="user-flights-list">
                        <thead>
                        <tr>
                            <th colspan="5">Upcoming flights:</th>
                        </tr>
                        <tr>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Number</th>
                            <th>From-To</th>
                            <th>Ticket</th>
                        </tr>
                        </thead>
                        <tbody>
                            #for(flight in flights):
                                <tr>
                                    <td>#date(flight.fromDate) #date(flight.toDate)</td>
                                    <td>#date(flight.time)</td>
                                    <td>#(flight.number)</td>
                                    <td>#formatDouble("%.2f", (flight.duration))</td>
                                    <td>#formatDouble("%.2f", (flight.price))</td>
                                    <td><a href="#" hx-get="/buy" class="table-button">Buy the ticket</a></td>
                                </tr>
                            #endfor
                        </tbody">
                    </table>
                </div>
            </div>
        </section>
    </main>
</div>
<script src="src/constructors/header.js"></script>
<script src="src/constructors/user-flights.js"></script>
<script src="src/script.js"></script>
</body>
</html>
